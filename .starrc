### Proxy
uproxy () {
    unset http_proxy
    unset https_proxy
    unset HTTP_PROXY
    unset HTTPS_PROXY
    unset no_proxy
    unset NO_PROXY
    echo proxy unset
}
_proxy () {
    export http_proxy=$1
    export https_proxy=$1
    export HTTP_PROXY=$1
    export HTTPS_PROXY=$1
    echo proxy=$1
}
